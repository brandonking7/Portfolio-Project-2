<h1>Edit {{user.fullName}}'s Profile</h1>
<form action="/users/{{user.id}}?_method=PUT" method="POST">
  <div>
    <label for="first_name">Firstname: </label>
    <input type="text" value="{{user.first_name}}" name="firstname"/>
  </div>
  <div>
    <label for="last_name">Lastname: </label>
    <input type="text" value="{{user.last_name}}" name="lastname"/>
  </div>
  <div>
    <label for="email">Email: </label>
    <input type="text" value="{{user.email}}" name="email"/>
  </div>
    <input type="submit"  class="btn btn-default" value="Update User">
</form>
