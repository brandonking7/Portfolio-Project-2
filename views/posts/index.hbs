<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Posts</title>
  </head>
  <body>
    <h2>{{user.first_name}}'s Posts!</h2>
    <ul>
      <a href="/users/{{user.id}}/posts/new" class="btn btn-default">New Post</a>
      {{#each user.posts}}
        <li><a href="/users/{{../user.id}}/posts/{{this.id}}">{{this.name}}</a></li>
        <li>{{this.description}}</li>
      {{/each}}

    </ul>
  </body>
</html>
