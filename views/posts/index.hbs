<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Posts</title>
  </head>
  <body>
    <header>
      <ul id="dropdown1" class="dropdown-content">
          <li><a href="/users/{{currentUser._id}}">Profile</a></li>
          <li><a href="/users/{{currentUser._id}}/posts">My Post</a></li>
          <li class="divider"></li>
          <li><a href="/">Log out</a></li>
        </ul>

        <div class="navbar-fixed">
          <nav id="nc">
            <div class="nav-wrapper">
              <a href="#!" class="left">Posts</a>
              <ul class="right hide-on-med-and-down">
                <li><a href="/users">Home</a></li>
                <!-- Dropdown Trigger -->
                <li><a class="dropdown-button" href="#!" data-activates="dropdown1">{{currentUser.first_name}}<i class="material-icons right">arrow_drop_down</i></a></li>
              </ul>
            </div>
          </nav>
        </div>
    </header>
    <h3>{{user.first_name}}'s Posts!</h3>
      <div class="container">
        <div class="row">
          {{#each user.posts}}
          <div class="col s4">
            <br>
            <img src="{{this.image}}">
            <br>
            <a href="/users/{{../user.id}}/posts/{{this.id}}">{{this.name}}</a>
            <!-- <li>{{this.description}}</li> -->
            <br>

            </div>
          {{/each}}
        </div>

      </div>


      <a href="/users/{{user.id}}/posts/new" class="btn btn-default">New Post</a>

  </body>
</html>
